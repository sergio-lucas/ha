@import 'hotels.styl';
/*
* Footer block
*/
.main-footer {
  clearfix()
  position: relative;
  background-color: rgba(255,255,255,.9);
  z-index: 10;
  padding: 36px;
}

.main-footer__item {
  display inline-block
  margin-right -4px
  vertical-align middle
  width (100/3)%
  text-align center
  box-sizing border-box
}

.main-footer__item--logo {
  font-size: 21px;
  line-height: 26px;
  font-weight: 700;
  text-decoration none
  color #000
}
.social-block {
  nolist()
}
.social-block__btn {
  display inline-block
  vertical-align: top;
  font-size 0
  background: #81b3d2 url(../img/sedona-sprite.png) no-repeat -381px -86px;
  width: 46px;
  height: 48px;
  margin-right: 5px;
}
  .social-block__btn:hover {
    background-color: #669ec0;
  }
.social-block__btn--fb {
  background-position: -414px -85px;
}
.social-block__btn--yt {
    background-position: -451px -86px;
}
.social-block__btn:active {
  background-color:rgba(84,150,189,1);
}
.social-block__btn--tw:active {
  background-position:-451px 15px;
}
.social-block__btn--fb:active {
  background-position:-453px -18px;
}
.social-block__btn--yt:active {
  background-position:-451px -51px;
}
.copyright-block__create_link {
  display inline-block
  vertical-align: middle;
  font-size 0
  margin-left 15px
  width: 113px;
  height: 39px;
  background: url(../img/htmlacademy.png) no-repeat;
  &:hover {
    background-position 0 -48px
  }
  &:active {
    background-position 0 -95px
  }
}
.copyright-block__create-by {
  font-weight bold
}
@media screen and (max-width:965px) {
  .feature-block__item {
    padding-left 30px
    padding-right 30px
  }
  .feature-list__item {
    padding-left 30px
    padding-right 30px
  }
  .options-block {
     width (100/3) %
  }
  .hotel-filter .price-night {
    width (100/3) %
  }
  .hotel-item__rating {
    width 150px
  }
}
